# Example OpenTofu variables for Parallels VM

# VM naming
vm_name     = "ubuntu-prod-01"
vm_hostname = "ubuntu-prod-01"

# SSH public key (replace with your actual public key)
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQ... user@example.com"

# Hardware specs
vm_cpus     = 4
vm_memory   = 4096  # 4GB RAM
vm_disk_size = 50   # 50GB disk

# Path to custom ISO (relative to opentofu directory)
custom_iso_path = "../output/ubuntu-22.04.5-autoinstall-arm64.iso"